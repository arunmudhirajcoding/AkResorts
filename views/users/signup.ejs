<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
	<div class="col-8 offset-2">
		<br /><br />
		<h2>signup on wonderlust</h2>
		<form
			action="/signup"
			method="POST"
			novalidate
			class="needs-validation"
		>
			<div>
				<label for="username" class="form-label">username</label>
				<input
					type="text"
					id="username"
					name="username"
					placeholder="Enter username"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Good username!</div>
				<div class="invalid-feedback">invaild Title!</div>
			</div>

			<div>
				<label for="email" class="form-label">email</label>
				<input
					type="email"
					id="email"
					name="email"
					placeholder="Enter email"
					class="form-control"
					required
				/>
			</div>
			<div>
				<label for="password" class="form-label">password</label>
				<input
					type="password"
					id="password"
					name="password"
					placeholder="Enter password"
					class="form-control"
					required
				/>
			</div>
			<button class="btn btn-success">Signup</button>
		</form>
	</div>
</div>
