<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
	<div class="col-8 offset-2">
		<br /><br />
		<h2>create new listing</h2>
		<form
			action="/listings"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data"
		>
			<!-- enctype to enpower the form to read images -->

			<div>
				<label for="title" class="form-label">Title</label>
				<input
					type="text"
					name="listing[title]"
					placeholder="Enter title"
					class="form-control"
					required
				/>
				<%= listing.image.Url %>
				<div class="valid-feedback">Good Title!</div>
				<div class="invalid-feedback">invaild Title!</div>
			</div>

			<br />
			<div>
				<label for="description" class="form-label">description</label>
				<textarea
					name="listing[description]"
					placeholder="Enter description"
					class="form-control"
					required
				></textarea>
				<div class="valid-feedback">Good description!</div>
				<div class="invalid-feedback">invaild description!</div>
			</div>

			<br />
			<div>
				<label for="image" class="form-label">image</label>
				<input
					type="file"
					name="listing[image]"
					placeholder="enter image URL/Link"
					class="form-control"
					required
				/>
			</div>
			<br />

			<br />
			<div class="row">
				<div class="col-md-4">
					<label for="price" class="form-label">price</label>
					<input
						name="listing[price]"
						placeholder="enter price"
						class="form-control"
						required
					/>
					<div class="valid-feedback">Good Format price!</div>
					<div class="invalid-feedback">invaild Price!</div>
				</div>

				<br />
				<div class="col-md-8">
					<label for="country" class="form-label">country</label>
					<input
						type="text"
						name="listing[country]"
						placeholder="enter country"
						class="form-control"
						required
					/>
					<div class="valid-feedback">vaild country!</div>
					<div class="invalid-feedback">invaild country!</div>
				</div>
			</div>

			<br />
			<div>
				<label for="location" class="form-label">location</label>
				<input
					type="text"
					name="listing[location]"
					placeholder="enter location"
					class="form-control"
					required
				/>
				<div class="valid-feedback">vaild location!</div>
				<div class="invalid-feedback">invaild location!</div>
			</div>

			<br />
			<button class="btn btn-dark add-btn">Add</button>
			<br /><br />
		</form>
	</div>
</div>
